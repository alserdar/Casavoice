<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ourBlue</item>
        <item name="colorPrimaryDark">@color/ourLightBlue</item>
        <item name="colorAccent">@color/ourGreen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowExitAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowBackground">@drawable/oblong_draw_snow</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="levelUpDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowExitAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowBackground">@mipmap/vip_diamond</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
